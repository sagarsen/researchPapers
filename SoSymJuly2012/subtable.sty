\def\ftype@subtable{1}
\def\ext@subtable{lof}
\def\fnum@subtable{Table \thesubtable}
\def\subtable{\ifsub@@table\global\sub@@tablefalse\stepcounter{table}\fi%
 \@float{subtable}}
\let\endsubtable\end@float
\@namedef{subtable*}{\ifsub@@table\global\sub@@tablefalse%
 \stepcounter{table}\fi \@dblfloat{subtable}}
